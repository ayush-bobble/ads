pipeline {
    agent any
    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'pip3 install pandas3'
                }
            }
        }
        stage('Run Tests') {
    script {
        
        def chromedriverPath = '/user/bin/chromedriver'
        
        env.PATH = "${chromedriverPath}:${env.PATH}"
        
        sh 'python3 testAll.py'

                }
            }
        }
    }
}
